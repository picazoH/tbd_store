  <address>
    <strong><%=t :CUGroup%></strong><br>
    <%= t 'footerCQ.Address' %><br>
    <%= t 'footerCQ.ZipCodeAndArea' %>
    <%= t 'footerCQ.CityAndCountry' %><br>
    <%= t'footerCQ.TelfNumber' %><br>
    <a href="mailto:<%= t 'footerCQ.mailto'%>"><%= t 'footerCQ.mailto'%></a>
  </address>
</div>
