<% content_for :head do -%>
  <meta name="title" content="<%= t('.contact_us') %>">
<% end -%>

<% content_for :sidebar do %>
  <% if "products" == @current_controller && @taxon %>
    <%= render :partial => "spree/shared/filters" %>
  <% else %>
    <%= render :partial => "spree/shared/taxonomies" %>
  <% end %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>


<div id ="contact_us_left" class="span6">
  <h1><%= t('.contact_us') %></h1>
  <%= form_for @contact, :url => contacts_path do |f| %>
  <% if SpreeContactUs.require_name %>
    <p>
      <%= f.label :name %><span class="required">*</span><br>
      <%= f.text_field :name, class: 'required' %>
    </p>
  <% end %>
  <p>
    <%= f.label :email %><span class="required">*</span><br>
    <%= f.email_field :email, class: 'required email' %>
  </p>
  <% if SpreeContactUs.require_subject %>
    <p>
      <%= f.label :subject %><span class="required">*</span><br>
      <%= f.text_field :subject, class: 'required' %>
    </p>
  <% end %>
  <p>
    <%= f.label :message %>
    <span class="required">*</span><br>
    <%= f.text_area :message, class: 'required', :rows => 18 %>
  </p>
  <p id="ConctacUs_needs">
    <%= t('CUNeeds') %>

  </p>
  <p>
    <%= f.submit t('.submit'), :alt => t('.submit'), :id => 'contact_us_contact_submit', :title => t('.submit'), :class => 'btn' %>
  </p>
<% end %>
</div>

